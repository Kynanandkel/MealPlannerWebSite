@{
    ViewData["Title"] = "Create Meal";
}
@model MealPlanner.Models.Meal
<div class="text-center">
    <h1 class="display-4">Create Meal</h1>
    
</div>

<form>
  <label>Id</label>
  <input class="form-control" type="number" placeholder="0" asp-for="Id"/>
  
  <label class="mt-4">Name</label>
  <input class="form-control" type="text" placeholder="name" asp-for="Name"/>

  <button class="btn btn-primary mt-4" type="submit">Add Meal</button>
</form>